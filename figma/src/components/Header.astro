---
import SocialLinks from './SocialLinks.astro';
import Logo from './Logo.astro';

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 border-b border-neutral-200 bg-background">
  <div class="px-12 lg:px-20 py-6 flex justify-between items-center">
    <div class="flex items-center gap-8">
      <Logo className="w-8 h-8" />
      <nav class="flex gap-8">
        <a 
          href="/"
          class={`text-sm uppercase tracking-widest transition-colors ${
            currentPath === '/' ? 'text-orange-500' : 'text-neutral-500 hover:text-orange-400'
          }`}
        >
          Home
        </a>
      </nav>
    </div>
    <SocialLinks />
  </div>
</header>

