---
import { sortedCareerData } from '../data/career';
import type { CareerItem } from '../types/career';

function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-GB', { month: 'short', year: 'numeric' });
}

function formatDateRange(dateFrom: string, dateTo?: string): string {
  const from = formatDate(dateFrom);
  if (!dateTo) {
    return `${from} - Present`;
  }
  const to = formatDate(dateTo);
  return `${from} - ${to}`;
}
---

<div class="w-full px-12 lg:px-20 pt-24 pb-20 lg:pt-28 lg:pb-32">
  <div class="max-w-5xl mx-auto">
    <h1 class="text-6xl lg:text-7xl mb-16 text-orange-500">Experience</h1>
    
    <div>
      {sortedCareerData.map((item) => (
        <div class="mb-20 last:mb-0">
          <div class="flex flex-col lg:flex-row gap-8 items-start">
            <!-- Left side - Date -->
            <div class="lg:w-48 flex-shrink-0 pt-0.5">
              <div class="text-sm text-neutral-500 uppercase tracking-widest">
                {formatDateRange(item.dateFrom, item.dateTo)}
              </div>
            </div>

            <!-- Right side - Content -->
            <div class="flex-1">
              <div class="mb-4">
                <h2 class="text-3xl font-medium mb-2">
                  <a 
                    href={item.website} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="text-orange-500 hover:text-orange-400 transition-colors"
                  >
                    {item.title}
                  </a>
                </h2>
                <div class="text-xl text-neutral-900 font-medium mb-3">
                  {item.subTitle}
                </div>
              </div>

              <p class="text-neutral-700 leading-relaxed mb-4">
                {item.content}
              </p>

              {item.technologies && item.technologies.length > 0 && (
                <div class="flex flex-wrap gap-2 mt-4">
                  {item.technologies.map((tech) => (
                    <span
                      class="px-3 py-1 text-sm bg-neutral-100 text-neutral-600 rounded-full border border-neutral-200"
                    >
                      {tech}
                    </span>
                  ))}
                </div>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>

